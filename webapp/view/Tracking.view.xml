<mvc:View 
    controllerName="trackingapp.controller.Tracking" 
	xmlns:c="sap.suite.ui.commons"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"    
	xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}" >
        <content>
            <Table growing="true" growingThreshold="5" id="HandlingUnits" mode="SingleSelectMaster" selectionChange=".onSelectionChange">
                <columns>
                    <Column id="handlingUnitColumn">
                        <header>
                            <Label text="{i18n>handlingUnitLabelText}" id="handlingUnitLabel"/>
                        </header>
                    </Column>
                    <Column id="carrierColumn">
                        <header>
                            <Label text="{i18n>carrierLabelText}" id="carrierLabel"/>
                        </header>
                    </Column>
                    <Column id="serviceColumn">
                        <header>
                            <Label text="{i18n>serviceLabelText}" id="serviceLabel"/>
                        </header>
                    </Column>
                    <Column id="trackingNumberColumn">
                        <header>
                            <Label text="{i18n>trackingNumberLabelText}" id="trackingNumberLabel"/>
                        </header>
                    </Column>
                    <Column id="shipDateColumn">
                        <header>
                            <Label text="{i18n>shipDateLabelText}" id="shipDateLabel"/>
                        </header>
                    </Column>
                </columns>
            </Table>
        </content>
    </Page>
</mvc:View>